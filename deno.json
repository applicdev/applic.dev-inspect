{
  "importMap": ".vscode/import_map.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "deno.worker"]
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "singleQuote": true
    }
  },
  "tasks": {
    "bundle": "deno run -A ./page/dev-bundle.ts",
    "start": "deno run -A --watch=lib/,page/routes/ page/dev.ts",
    "production": "DENO_DEPLOYMENT_ID=\"$(git rev-parse HEAD)\" deno run -A page/main.ts",
    "lint": "deno fmt --ignore=./page/static && deno lint --ignore=./page/static"
  }
}
